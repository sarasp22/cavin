<div class="devise-container">
  <div class="devise-card">
    <div class="devise-header">
      <div class="devise-icon">
        <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M8 2h8l2 10-4 10-4-10z"/>
          <ellipse cx="12" cy="2" rx="4" ry="1"/>
        </svg>
      </div>
      <h2>Connexion</h2>
      <p class="devise-subtitle">Accédez à votre cave personnelle</p>
    </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "devise-form" }) do |f| %>
      <div class="form-group">
        <%= f.label :email, "Email", class: "form-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input", placeholder: "votre@email.com" %>
      </div>

      <div class="form-group">
        <%= f.label :password, "Mot de passe", class: "form-label" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-input", placeholder: "••••••••" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-checkbox">
          <%= f.check_box :remember_me, class: "checkbox-input" %>
          <%= f.label :remember_me, "Se souvenir de moi", class: "checkbox-label" %>
        </div>
      <% end %>

      <div class="form-actions">
        <%= f.submit "Se connecter", class: "btn-submit" %>
      </div>
    <% end %>

    <div class="devise-links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
