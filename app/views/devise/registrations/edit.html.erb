<div class="devise-container">
  <div class="devise-card">
    <div class="devise-header">
      <div class="devise-icon">
        <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
          <circle cx="12" cy="7" r="4"></circle>
        </svg>
      </div>
      <h2>Modifier mon compte</h2>
      <p class="devise-subtitle">Gérez vos informations personnelles</p>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "devise-form" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :email, "Email", class: "form-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="form-info">
          Confirmation en attente pour : <%= resource.unconfirmed_email %>
        </div>
      <% end %>

      <div class="form-divider">
        <span>Changer le mot de passe</span>
      </div>

      <div class="form-group">
        <%= f.label :password, "Nouveau mot de passe", class: "form-label" %>
        <span class="form-hint">(laissez vide si vous ne voulez pas le modifier)</span>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-input", placeholder: "••••••••" %>
        <% if @minimum_password_length %>
          <span class="form-hint"><%= @minimum_password_length %> caractères minimum</span>
        <% end %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "Confirmation du nouveau mot de passe", class: "form-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-input", placeholder: "••••••••" %>
      </div>

      <div class="form-divider">
        <span>Confirmation</span>
      </div>

      <div class="form-group">
        <%= f.label :current_password, "Mot de passe actuel", class: "form-label" %>
        <span class="form-hint">(requis pour confirmer les modifications)</span>
        <%= f.password_field :current_password, autocomplete: "current-password", class: "form-input", placeholder: "••••••••" %>
      </div>

      <div class="form-actions">
        <%= f.submit "Mettre à jour", class: "btn-submit" %>
      </div>
    <% end %>

    <div class="devise-danger-zone">
      <h3>Zone de danger</h3>
      <p>Vous souhaitez supprimer votre compte ?</p>
      <%= button_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "Êtes-vous sûr ? Cette action est irréversible.", turbo_confirm: "Êtes-vous sûr ? Cette action est irréversible." }, method: :delete, class: "btn-danger" %>
    </div>

    <div class="devise-links">
      <%= link_to "Retour", :back, class: "link-back" %>
    </div>
  </div>
</div>
